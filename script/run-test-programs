#!/bin/sh -eu

run_test_program() (
    basename="$(basename "$filename" .exe)"

    case "$basename" in
	(test-*)
	    cd "$(dirname "$filename")"
	    if ! ${valgrind:+$valgrind }"./$basename" >"$basename.log"; then
		printf 'Test program %s failed' $basename
	    fi
	    ;;
	(*)
	    ;;
    esac
)

export HOSTNAME=${HOSTNAME-$(hostname)}
export LD_LIBRARY_PATH=".${LD_LIBRARY_PATH+:$LD_LIBRARY_PATH}"

if [ "${USING_VALGRIND-}" = true ]; then
   valgrind="valgrind -q"
else
   valgrind=
fi

for filename in "$@"; do
    run_test_program "$filename"
done
