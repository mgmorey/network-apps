#!/bin/sh -eu

run_test_program() (
    basename="$(basename "$filename" .exe)"

    case "$basename" in
	(test-*)
	    cd "$(dirname "$filename")"
	    ${valgrind:+$valgrind }"./$basename" >"$basename.log"
	    ;;
	(*)
	    ;;
    esac
)

if [ "${USING_VALGRIND-}" = true ]; then
   valgrind="valgrind -q"
else
   valgrind=
fi

for filename in "$@"; do
    run_test_program "$filename"
done
