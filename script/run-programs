run_program() (
    basename=$(basename "$1" .exe)
    dirname=$(dirname "$1")
    filename="$dirname/$basename"
    shift

    case "$basename" in
	(test-*)
	    ${wrapper:+$wrapper }"$filename" "$@" >"$filename.log" 2>&1
	    ;;
	(unix-client)
	    "$filename" "$@" 1 2 3 4 >"$filename.log" 2>&1
	    "$filename" "$@" DOWN >>"$filename.log" 2>&1
	    sleep 1
	    ;;
	(unix-server)
	    "$filename" "$@" >"$filename.log" 2>&1 &
	    sleep 1
	    ;;
	(*)
	    ;;
    esac
)

run_programs() {
    args=

    if [ "${USING_VALGRIND-}" = true ]; then
	wrapper="valgrind -q"
    else
	wrapper=
    fi

    while getopts rvh opt; do
	case $opt in
	    (v)
		args=-v
		;;
	    (h)
		usage
		exit 0
		;;
	    (\?)
		exit 2
		;;
	esac
    done

    shift $(($OPTIND - 1))

    for program; do
	run_program "$program"
    done

    if [ -n "$args" ]; then
	for program; do
	    run_program "$program" $args
	done
    fi
}

usage() {
    cat <<EOF >&2
Usage: $script [-v]
       $script -h
EOF
}

usage_error() {
    if [ $# -gt 0 ]; then
	printf "$@" >&2
    fi

    printf '%s\n' '' >&2
    usage
    exit 2
}

script=$(basename "$0")

run_programs "$@"
