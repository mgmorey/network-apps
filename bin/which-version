# GNU General Public License for more details.

# You should have received a copy of the GNU General Public License
# along with this program.  If not, see <https://www.gnu.org/licenses/>.

abort() {
    printf "$@" >&2
    exit 1
}

assert() {
    "$@" || abort '%s: Assertion failed: %s\n' "$script" "$*"
}

configure_platform() {
    sed=$(get_sed_command)

    if ! /usr/bin/which $sed >/dev/null 2>&1; then
	abort '%s: %s: Command not found\n' \
	      "$script" \
	      "$sed"
    fi
}

get_command_rootname() {
    basename -- "$1" .exe | $sed 's/-[0-9][0-9]*$//'
}

get_command_version() {
    assert [ $# -eq 3 ]
    assert [ -n "$1" ]
    assert [ -n "$2" ]
    assert [ -n "$3" ]
    "$1" "$2" 2>&1 | $sed -n "$3"
}

get_filenames() {
    assert [ $# -ge 1 ]
    which "$@"
}

get_sed_command() {
    case "$ID" in
	(macos)
	    printf '%s\n' gsed
	    ;;
	(*)
	    printf '%s\n' sed
	    ;;
    esac
}

get_version_options() {
    assert [ $# -eq 1 ]
    assert [ -n "$1" ]
    "$script_prefix$script.awk" \
	command="$1" \
	column=2 \
	"$script_prefix$script.txt"
}

get_version_regex() {
    assert [ $# -eq 1 ]
    assert [ -n "$1" ]
    "$script_prefix$script.awk" \
	command="$1" \
	column=3 \
	"$script_prefix$script.txt"
}

quote_lines() {
    awk -v quote="${1-\047}" '{print quote $0 quote}'
}

remove_duplicate_filenames() {
    if [ "$ID" = windows ]; then
	function=tolower
    else
	function=
    fi

    remove_duplicate_lines $function
}

remove_duplicate_lines() {
    awk '!_['"${1-}"'($0)]++'
}

usage() {
    cat <<EOF >&2
Usage: $script COMMAND
       $script -h

Print command paths and versions.
EOF
}

usage_error() {
    if [ $# -gt 0 ]; then
	printf "$@" >&2
    fi

    printf '%s\n' '' >&2
    usage
    exit 2
}

which_version() {
    while getopts h opt; do
	case $opt in
	    (h)
		usage
		exit 0
		;;
	    (\?)
		exit 2
		;;
	esac
    done

    shift $(($OPTIND - 1))

    if [ $# -lt 1 ]; then
	usage_error '%s: Not enough arguments\n' "$script"
    elif [ $# -gt 1 ]; then
	usage_error '%s: Too many arguments\n' "$script"
    fi

    configure_platform

    command="$1"
    root_command=$(get_command_rootname "$command")

    if ! options=$(get_version_options $root_command) || [ -z "$options" ]; then
	abort '%s: %s: Not supported\n' "$script" $command
    fi

    if ! regex=$(get_version_regex $root_command) || [ -z "$regex" ]; then
	abort '%s: %s: Not supported\n' "$script" $command
    fi

    get_filenames $command | while read filename; do
	for option in $(printf '%s\n' "$options" | tr ',' ' '); do
	    version=$(get_command_version "$filename" "$option" "$regex")

	    if [ -n "$version" ]; then
		printf '%s\n' "$version"
		break
	    fi
	done
    done
}

script=$(basename "$0")

case "$0" in
    (*/*)
	script_dir=$(cd "$(dirname "$0")" && pwd)
	;;
    (*)
	script_dir=
	;;
esac

script_prefix=${script_dir:+$script_dir/}

eval $("${script_prefix}get-os-release" -x)
which_version "$@"
