is_gxx() {
    if ! [ "${1%-*}" = g++ ]; then
	return 1
    fi

    if ! which "$1" >/dev/null 2>&1; then
	return 1
    fi

    if "$1" --version 2>/dev/null | head -n 1 | grep -q '^Apple clang'; then
	return 1
    fi

    return 0
}

if is_gxx "${1-${CXX-g++}}"; then
    gxx=true
else
    gxx=false
fi

printf '%s\n' "$gxx"
