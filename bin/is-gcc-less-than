GCC_VERSION_MIN=10

get_gcc_major_version() {
    get_gcc_version "$1" | cut -d. -f1
}

get_gcc_version() {
    "$1" -dumpfullversion 2>/dev/null || "$1" -dumpversion
}

is_gcc_less_than() {
    gcc_major_version=$(get_gcc_major_version "$2")

    if ! [ "${gcc_major_version:-0}" -lt "$1" ]; then
	return 1
    fi

    return 0
}

if is_gcc_less_than "${1-$GCC_VERSION_MIN}" "${2-gcc}"; then
    result=true
else
    result=false
fi

printf '%s\n' "$result"
