grep_version() {
    egrep -q '^(Apple|FreeBSD|Homebrew) clang'
}

get_version() {
    "$1" --version 2>/dev/null | head -n 1
}

is_clang() {
    get_version "$1" | grep_version
}

if is_clang "${1-clang}"; then
    result=true
else
    result=false
fi

printf '%s\n' "$result"
